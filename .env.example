# Environment Variables Template
# Copy this file to .env to customize your deployment

# ================================
# Database Configuration
# ================================
POSTGRES_DB=hacknation
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DB_HOST=database
DB_PORT=5432
DB_NAME=hacknation
DB_USER=postgres
DB_PASSWORD=postgres

# ================================
# LLM Configuration
# ================================
# Cloudflare Workers AI
USE_CLOUDFLARE_AI=true
CLOUDFLARE_ACCOUNT_ID=your_account_id_here
CLOUDFLARE_API_TOKEN=your_api_token_here
CLOUDFLARE_MODEL_EN=@cf/meta/llama-3.1-70b-instruct
CLOUDFLARE_MODEL_PL=@cf/meta/llama-3.1-70b-instruct

# Legacy Ollama (if USE_CLOUDFLARE_AI=false)
LLM_EN_HOST=llm-en
LLM_EN_PORT=11434
LLM_PL_HOST=llm-pl
LLM_PL_PORT=11434

# ================================
# Application Configuration
# ================================
# Backend API URL (for frontend)
VITE_API_URL=http://localhost:8080

# Flask
FLASK_ENV=production
FLASK_DEBUG=false
PORT=8080

# ================================
# Optional: Change default ports
# ================================
# FRONTEND_PORT=3000
# BACKEND_PORT=8080
# DATABASE_PORT=5432
# LLM_EN_PORT_EXTERNAL=11434
# LLM_PL_PORT_EXTERNAL=11435
LLM_PROVIDER=ollama
# LLM_PROVIDER=cloudflare