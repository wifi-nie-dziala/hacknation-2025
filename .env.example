# Environment Variables Template
# Copy this file to .env to customize your deployment

# ================================
# Database Configuration
# ================================
POSTGRES_DB=hacknation
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DB_HOST=database
DB_PORT=5432

# ================================
# LLM Configuration
# ================================
# English LLM
LLM_EN_HOST=llm-en
LLM_EN_PORT=11434

# Polish LLM
LLM_PL_HOST=llm-pl
LLM_PL_PORT=11434

# ================================
# Application Configuration
# ================================
# Backend API URL (for frontend)
VITE_API_URL=http://localhost:5000

# Flask configuration
# SECURITY: Set FLASK_DEBUG=false in production to prevent security vulnerabilities
FLASK_ENV=production
FLASK_DEBUG=false

# ================================
# Optional: Change default ports
# ================================
# Uncomment and modify if default ports conflict
# FRONTEND_PORT=3000
# BACKEND_PORT=5000
# DATABASE_PORT=5432
# LLM_EN_PORT_EXTERNAL=11434
# LLM_PL_PORT_EXTERNAL=11435
