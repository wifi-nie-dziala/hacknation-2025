# Environment Configuration

# Database
DB_HOST=database
DB_PORT=5432
DB_NAME=hacknation
DB_USER=postgres
DB_PASSWORD=postgres

# Cloudflare Workers AI
CLOUDFLARE_ACCOUNT_ID=your_account_id_here
CLOUDFLARE_API_TOKEN=your_api_token_here

# LLM Configuration
USE_CLOUDFLARE_AI=true
# Models: @cf/meta/llama-3.1-70b-instruct or @cf/meta/llama-3.1-8b-instruct
CLOUDFLARE_MODEL_EN=@cf/meta/llama-3.1-70b-instruct
CLOUDFLARE_MODEL_PL=@cf/meta/llama-3.1-70b-instruct

# Legacy Ollama (if USE_CLOUDFLARE_AI=false)
LLM_EN_HOST=llm-en
LLM_EN_PORT=11434
LLM_PL_HOST=llm-pl
LLM_PL_PORT=11434

# Flask
FLASK_DEBUG=false
PORT=8080

